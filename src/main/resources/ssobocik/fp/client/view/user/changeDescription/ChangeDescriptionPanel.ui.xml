<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
    <ui:with field="messages" type="ssobocik.fp.client.Messages"/>
    <g:VerticalPanel addStyleNames="ChangeDescriptionPanel">
        <b:Label>New description</b:Label>
        <b:TextArea ui:field="descriptionTextArea"/>
        <g:HorizontalPanel>
            <b:Button ui:field="changeButton" text="Change"/>
            <b:Button ui:field="cancelButton" text="Cancel"/>
        </g:HorizontalPanel>

    </g:VerticalPanel>

</ui:UiBinder>